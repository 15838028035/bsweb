<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.multipart.maxSize" value="20000000" />
	<!-- 用于CRUD Action的parent package -->
	<package name="crud-default" extends="convention-default" namespace="/">
		<!-- 基于paramsPrepareParamsStack,
			增加store interceptor保证actionMessage在redirect后不会丢失 -->
		<interceptors>
			<interceptor name="trimInterceptor" class="com.lj.app.core.common.interceptor.TrimInterceptor" />
			<interceptor-stack name="crudStack">
				<interceptor-ref name="trimInterceptor" />
				<interceptor-ref name="store">
					<param name="operationMode">AUTOMATIC</param>
				</interceptor-ref>
				<interceptor-ref name="exception">
		            <param name="logEnabled">true</param>
		            <param name="logLevel">error</param>
				</interceptor-ref>				
				<interceptor-ref name="paramsPrepareParamsStack" />
				
			</interceptor-stack>
		</interceptors>

	<default-interceptor-ref name="crudStack" />
	<!-- 暴露异常信息，方便查看错误信息
		<default-interceptor-ref name="crudStack" />
		<global-results>
			<result name="error">/jsp/common/500.jsp</result>
		</global-results> 
		<global-exception-mappings>
		<exception-mapping result="error"
				exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings> -->
	</package>
	
	<package name="timeout" extends="crud-default">
		<interceptors>
			<interceptor name="timeoutInterceptor"
				class="com.lj.app.bsweb.upm.interceptor.TimeoutInterceptor">
				<param name="includeMethods">
					login
				</param>
			</interceptor>
		</interceptors>
		<global-results>
			<result name="timeout">/jsp/common/timeout.jsp</result>
			<result name="ajaxTimeOut">
				/commonWebAction!ajaxtimeout.action
			</result>
			<result name="loginAjaxTimeOut">
				commonWebAction!logintimeout.action
			</result>
		</global-results>
	</package>
	
</struts>